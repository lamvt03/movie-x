<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="movie-x-persistence" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.filmweb.entity.Comment</class>
        <class>com.filmweb.entity.History</class>
        <class>com.filmweb.entity.Order</class>
        <class>com.filmweb.entity.Rating</class>
        <class>com.filmweb.entity.Share</class>
        <class>com.filmweb.entity.User</class>
        <class>com.filmweb.entity.Video</class>
        <class>com.filmweb.entity.Category</class>
        <class>com.filmweb.entity.Otp</class>
        <class>com.filmweb.entity.OnboardingToken</class>
        <class>com.filmweb.entity.UserBalanceTransaction</class>
        <class>com.filmweb.entity.UserVideoPurchase</class>
        <class>com.filmweb.entity.PaymentTransaction</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>

<!--            Hikari connection pool-->
            <property name="hibernate.hikari.minimumIdle" value="5" />
            <property name="hibernate.hikari.maximumPoolSize" value="8" />
            <property name="hibernate.hikari.idleTimeout" value="30000" />
            <property name="hibernate.connection.provider_class" value="com.zaxxer.hikari.hibernate.HikariConnectionProvider"/>

        </properties>
    </persistence-unit>
</persistence>
